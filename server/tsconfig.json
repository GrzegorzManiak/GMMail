{
	"compilerOptions": {
		"target": "ESNext",
		"module": "esnext",
		"lib": [
			"es5",
			"es6",
			"ESNext"
		],
		"declaration": false,
		"noImplicitAny": false,
		"removeComments": true,
		"esModuleInterop": true,
		"isolatedModules": false,
		"sourceMap": false,
		"allowJs": false,
		"moduleResolution": "node",
		"outDir": "./dist",
		"strict": false,
		"types": [
			"bun-types"
		]
	},
	"include": [
		"src/**/*"
	],
	"ts-node": {
		"esm": true
	},
	"lib": [
		"esnext"
	]
}