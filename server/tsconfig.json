{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es5", "es6"],
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "allowJs": true,
    "moduleResolution": "node",
    "outDir": "./dist", 
    "strict": false 
  },
  "include": ["src/**/*"]
}